    <script>
        // ===== MENU MOBILE =====
        function toggleMenu() {
            const nav = document.getElementById('nav-menu');
            nav.classList.toggle('active');
        }

        // ===== FAQ ACCORDION =====
        function toggleFaq(element) {
            const faqItem = element.parentElement;
            const isActive = faqItem.classList.contains('active');
            
            // Fecha todos
            document.querySelectorAll('.faq-item').forEach(item => {
                item.classList.remove('active');
            });
            
            // Abre o clicado (se não estava ativo)
            if (!isActive) {
                faqItem.classList.add('active');
            }
        }

        // ===== MODAL =====
        function openModal() {
            document.getElementById('modal').classList.add('active');
            document.body.style.overflow = 'hidden';
        }

        function closeModal() {
            document.getElementById('modal').classList.remove('active');
            document.body.style.overflow = 'auto';
            
            // Reset form após fechar
            setTimeout(() => {
                document.getElementById('form-container').style.display = 'block';
                document.getElementById('success-message').classList.remove('show');
                document.getElementById('lead-form').reset();
            }, 300);
        }

        // Fechar modal ao clicar fora
        document.getElementById('modal').addEventListener('click', function(e) {
            if (e.target === this) {
                closeModal();
            }
        });

        // ===== MÁSCARA DE TELEFONE =====
        document.getElementById('celular').addEventListener('input', function(e) {
            let value = e.target.value.replace(/\D/g, '');
            if (value.length > 11) value = value.slice(0, 11);
            
            if (value.length > 2) {
                value = '(' + value.slice(0, 2) + ') ' + value.slice(2);
            }
            if (value.length > 10) {
                value = value.slice(0, 10) + '-' + value.slice(10);
            }
            
            e.target.value = value;
        });

        // ===== MÁSCARA DE CEP =====
        document.getElementById('cep').addEventListener('input', function(e) {
            let value = e.target.value.replace(/\D/g, '');
            if (value.length > 8) value = value.slice(0, 8);
            
            if (value.length > 5) {
                value = value.slice(0, 5) + '-' + value.slice(5);
            }
            
            e.target.value = value;
        });

        // ===== ENVIO DO FORMULÁRIO PARA GOOGLE SHEETS =====
        function submitForm(e) {
            e.preventDefault();
            
            const submitBtn = document.getElementById('submit-btn');
            submitBtn.disabled = true;
            submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Enviando...';
            
            const formData = {
                nome: document.getElementById('nome').value,
                email: document.getElementById('email').value,
                celular: document.getElementById('celular').value,
                cep: document.getElementById('cep').value,
                data: new Date().toLocaleString('pt-BR')
            };

            /*
            ====================================================================
            INSTRUÇÕES PARA INTEGRAÇÃO COM GOOGLE SHEETS
            ====================================================================
            
            1. Crie uma planilha no Google Sheets com as colunas:
               | Data | Nome | Email | Celular | CEP |
            
            2. Vá em Extensões > Apps Script
            
            3. Cole o seguinte código no Apps Script:
            
            function doPost(e) {
                var sheet = SpreadsheetApp.getActiveSpreadsheet().getActiveSheet();
                var data = JSON.parse(e.postData.contents);
                
                sheet.appendRow([
                    data.data,
                    data.nome,
                    data.email,
                    data.celular,
                    data.cep
                ]);
                
                // Enviar e-mail para o time de atendimento
                var emailTime = "SEU_EMAIL_AQUI@email.com"; // Substitua pelo e-mail do time
                var assunto = "Novo Lead - VIDA Espaço Terapêutico";
                var corpo = "Novo lead recebido!\n\n" +
                            "Nome: " + data.nome + "\n" +
                            "E-mail: " + data.email + "\n" +
                            "Celular: " + data.celular + "\n" +
                            "CEP: " + data.cep + "\n" +
                            "Data: " + data.data;
                
                MailApp.sendEmail(emailTime, assunto, corpo);
                
                return ContentService.createTextOutput(JSON.stringify({status: "success"}))
                    .setMimeType(ContentService.MimeType.JSON);
            }
            
            4. Clique em "Implantar" > "Nova implantação"
            
            5. Selecione "App da Web"
               - Executar como: Eu
               - Quem pode acessar: Qualquer pessoa
            
            6. Copie a URL gerada e substitua no código abaixo
            
            ====================================================================
            */
            
            // URL do Google Apps Script (substituir pela URL real após criar)
            const scriptURL = 'COLE_SUA_URL_DO_GOOGLE_APPS_SCRIPT_AQUI';
            
            // Se a URL ainda não foi configurada, simula sucesso para teste
            if (scriptURL === 'COLE_SUA_URL_DO_GOOGLE_APPS_SCRIPT_AQUI') {
                // Simulação para teste
                setTimeout(() => {
                    showSuccess();
                    submitBtn.disabled = false;
                    submitBtn.innerHTML = '<i class="fas fa-paper-plane"></i> Enviar';
                }, 1500);
                
                console.log('Dados do formulário (modo teste):', formData);
                return;
            }
            
            // Envio real para Google Sheets
            fetch(scriptURL, {
                method: 'POST',
                mode: 'no-cors',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(formData)
            })
            .then(() => {
                showSuccess();
            })
            .catch(error => {
                console.error('Erro:', error);
                alert('Erro ao enviar. Tente novamente ou entre em contato pelo WhatsApp.');
            })
            .finally(() => {
                submitBtn.disabled = false;
                submitBtn.innerHTML = '<i class="fas fa-paper-plane"></i> Enviar';
            });
        }

        function showSuccess() {
            document.getElementById('form-container').style.display = 'none';
            document.getElementById('success-message').classList.add('show');
        }

        // ===== SMOOTH SCROLL =====
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function(e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
                // Fecha menu mobile
                document.getElementById('nav-menu').classList.remove('active');
            });
        });

        // ===== HEADER SCROLL EFFECT =====
        window.addEventListener('scroll', function() {
            const header = document.querySelector('header');
            if (window.scrollY > 50) {
                header.style.background = 'rgba(255, 255, 255, 0.98)';
            } else {
                header.style.background = 'var(--white)';
            }
        });
    </script>

</body>
</html>
